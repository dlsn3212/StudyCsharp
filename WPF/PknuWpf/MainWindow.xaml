<Window x:Class="PknuWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PknuWpf"
        mc:Ignorable="d"
        Title="SampleWindow" Height="720" Width="1280" Foreground="#FF0A0B0C" Background="#FFE5FBFF">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center"> 
        <TextBlock TextWrapping="Wrap" Text="TextBlock" Height="40"
                   Margin="10" Width="100"/>
        <TextBox x:Name="TxtNames" Height="40" TextWrapping="Wrap"
                 Text="TextBox" Margin="10"/>
        <ProgressBar x:Name="PgbTest" Height="30" Margin="10"
                     Minimum="0" Maximum="100" Value="70" Foreground="#FF81D0DC"/>
        <Slider Height="40" Margin="10"/>
        <PasswordBox PasswordChar="*" Password="Test" Height="30" Margin="10"/>


    </StackPanel>
</Window>
